@page
@model RazorApp.Pages.Students.DeleteModel
@{
    ViewData["Title"] = "Delete Student";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Are you sure you want to delete this student?</h3>
    <p>Student: @Model.Student.FirstName @Model.Student.LastName</p>
    <p>Email: @Model.Student.Email</p>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/Students/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
